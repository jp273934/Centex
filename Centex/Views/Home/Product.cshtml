@model Centex.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        @for (var i = 0; i < @Model.Product.Descriptions.SubDescriptions.Count(); i++)
        {
            <div class="modal" id="@Model.Product.ModalIds.ToArray()[i]">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h4 class="modal-title">Modal title</h4>
                        </div>
                        <div class="modal-body">
                            @foreach (var item in @Model.Product.Descriptions.SubDescriptions.ToList()[i].Descriptions)
                            {
                                <p>@item</p>
                            }

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="row top">
    <div class="col-lg-offset-1 col-lg-10">
        <div class="row">
            <div class="col-lg-2">
                @if (Model.Product.Photos != null && Model.Product.Photos.Any())
                {
                    for(var i = 0; i < Model.Product.Photos.Count();i++)
                    {
                        <a href="#" data-backdrop="static" data-toggle="modal" data-target="#@Model.Product.ModalIds.ToArray()[i]"><img src="@Model.Product.Photos.ToList()[i].FilePath" style="width: 10vw; height: 10vh;"/></a><br/><br/>
                    }
                }              
            </div>
            <div class="col-lg-7">
                <div class="panel panel-default" style="border: none;">
                    <div class="panel-body">
                        <h2>@Model.Title</h2>
                        @foreach (var item in @Model.Product.Descriptions.MainDescriptions)
                        {
                            <p>@item</p>
                        }                     
                    </div>
                </div>

            </div>
            <div class="col-lg-3">
                <div class="panel panel-default" style="border: none;">
                    <div class="panel-body">
                        @Html.Partial("ContactPanel")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


