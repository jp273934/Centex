@model Centex.Models.ServiceModel

@{
    ViewBag.Title = "ServiceModel";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row" style="padding-top: 50px;">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <img src="@Model.ImagePath" style="width: 100%; height: 30vh;"/>
                <br/><br/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9">
                <h3>@Model.Title</h3>
                @foreach (var item in @Model.Descriptions)
                {
                    <p>@item</p>
                }
            </div>
            <div class="col-lg-3">
                @Html.Partial("ContactPanel");
            </div>
        </div>
    </div>  
</div>

