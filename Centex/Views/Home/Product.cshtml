@model Centex.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    .photo {
        width: 12vw;
        height: 17.5vh;
    }

    @@media(max-width: 480px) {
        .photo {
            width: 55vw;
            padding-left: 10vw;
        }
    }
</style>

<div class="row top">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12 col-lg-5 col-lg-push-3 col-md-6 col-md-push-3">              
                <h2>@Model.Title</h2>
                @foreach (var item in @Model.Product.Descriptions.MainDescriptions)
                {
                    <p>@item.DescriptionBody</p>
                    if (item.Bullets != null && item.Bullets.Any())
                    {
                        <ul>
                            @foreach (var subItem in item.Bullets)
                            {
                                <li>@subItem</li>
                            }
                        </ul>
                    }

                }

                @if (Model.ListDescriptions != null && Model.ListDescriptions.Any())
                {

                    <ul>
                        @foreach (var item in Model.ListDescriptions)
                {
                            <li style="font-size: 1.25em;">@item</li>
                        }
                    </ul>
                }

                @if (!string.IsNullOrEmpty(Model.InfoLink))
                {
                    <a href="@Model.InfoLink" target="_blank" class="btn btn-info">More Information</a><br/>
                }

                @if (!string.IsNullOrEmpty(Model.DocumentLink))
                {
                    <a href="@Model.DocumentLink" target="_blank" class="btn btn-info">Download Information</a><br />
                }
            </div>
            <div class="col-xs-12 col-lg-3 col-lg-push-3 col-md-push-3 col-md-3">
                @Html.Partial("ContactPanel")
            </div>
            <div class="col-xs-12 col-md-3 col-md-pull-9 col-lg-2 col-lg-pull-7 text-center">
                @if (Model.Product.Photos != null && Model.Product.Photos.Any())
                {
                    for (var i = 0; i < Model.Product.Photos.Count(); i++)
                    {
                        <a href="#" data-toggle="modal" data-target="#@Model.Product.ModalIds.ToArray()[i]"><img src="@Model.Product.Photos.ToList()[i].FilePath" alt="@Model.Product.Photos.ToList()[i].ImageDescription" class="photo"/></a><br/>
                        <h4>@Model.Product.Descriptions.SubDescriptions.ToList()[i].Title</h4>
                    }
                }
            </div>            
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @for (var i = 0; i < @Model.Product.Descriptions.SubDescriptions.Count(); i++)
        {
            <div class="modal fade" id="@Model.Product.ModalIds.ToArray()[i]">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            @if (i < Model.Product.Photos.Count())
                            {
                                <h4 style="font-weight: bold;" class="modal-title">@Model.Product.Descriptions.SubDescriptions.ToList()[i].Title</h4>
                            }
                        </div>
                        <div class="modal-body">
                            @if (i < Model.Product.Photos.Count())
                            {
                                <img src="@Model.Product.Photos.ToList()[i].FilePath" alt="@Model.Product.Photos.ToList()[i].ImageDescription" class="photo" style="float: left; padding-right: 5px;" />
                            }
                            
                            @foreach (var item in @Model.Product.Descriptions.SubDescriptions.ToList()[i].Descriptions)
                            {
                                <p>@item</p>
                            }
                            <ul>
                                @if (@Model.Product.Descriptions.SubDescriptions.ToList()[i].ListDescriptions != null && @Model.Product.Descriptions.SubDescriptions.ToList()[i].ListDescriptions.Any())
                                {
                                    foreach (var item in @Model.Product.Descriptions.SubDescriptions.ToList()[i].ListDescriptions)
                                    {
                                        <li style="font-size: 1.25em;">@item</li>
                                    }
                                }
                            </ul>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

