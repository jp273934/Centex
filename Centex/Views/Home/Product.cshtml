@model Centex.Models.Product
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row" style="padding-top: 20vh;">
    <div class="col-lg-offset-2 col-lg-8">
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default" style="border: none;">
                    <div class="panel-body">
                        <h2>@Model.Title</h2>
                        @*<img src="@Model.ImagePath" style="float: right; width: 25vw;" />*@
                        @foreach (var item in @Model.Descriptions)
                        {
                            <p>@item</p>
                        }
                        
                        @if (@Model.ListDescriptions != null && @Model.ListDescriptions.Any())
                        {
                            <ul>
                                @foreach (var item in @Model.ListDescriptions)
                                {
                                    <li style="font-size: 1.3em;">
                                        @item
                                    </li>
                                }
                            </ul>
                        }
                        
                        @Html.ActionLink("Order", "Catalog", "Home", new { Id = @Model.CatalogId}, new { @class = "btn btn-raised btn-info"})
                    </div>
                </div>
               
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default" style="border: none;">
                    <div class="panel-body">
                        @Html.Partial("ContactPanel")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


