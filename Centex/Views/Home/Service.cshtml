@model Centex.Models.ServiceModel

@{
    ViewBag.Title = "ServiceModel";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    .photo {
        width: 12vw;
        height: 17.5vh;
    }

    @@media(max-width: 480px) {
        .photo {
            width: 55vw;
            padding-left: 10vw;
        }
    }
</style>

<div class="row top">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12 col-lg-5 col-lg-push-3 col-md-6 col-md-push-3">
                <h2>@Model.Title</h2>
                @foreach (var item in @Model.Descriptions)
                {
                    <p>@item.Description</p>

                    if (@item.Items != null && @item.Items.Any())
                    {
                        <ul>
                            @foreach (var subItem in item.Items)
                            {
                                <li>@subItem</li>
                            }
                        </ul>
                    }
                }
            </div>
            <div class="col-xs-12 col-lg-3 col-lg-push-3 col-md-push-3 col-md-3">
                @Html.Partial("ContactPanel")
            </div>
            <div class="col-xs-12 col-md-3 col-md-pull-9 col-lg-2 col-lg-pull-7 text-center">
                @if(Model.Images != null && Model.Images.Any())
                {
                    foreach(var item in Model.Images)
                    {
                        <img src="@item" class="photo"/>
                        <br/><br/>
                    }
                }
            </div>
        </div>
    </div>
</div>

