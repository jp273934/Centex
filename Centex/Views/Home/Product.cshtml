@model Centex.Models.Product
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row" style="padding-top: 20vh;">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-9">
                <div class="panel panel-default" style="border: none;">
                    <div class="panel-body">
                        <h3>@Model.Title</h3>
                        <img src="@Model.ImagePath" style="float: right; width: 25vw;" />
                        @foreach (var item in @Model.Descriptions)
                        {
                            <p>@item</p>
                        }
                    </div>
                </div>
               
            </div>
            <div class="col-lg-3">
                <div class="panel panel-default" style="border: none;">
                    <div class="panel-body">
                        @Html.Partial("ContactPanel")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


