<div class="panel panel-default" ng-app="app" ng-controller="ContactController" style="border: none;">
    @*<div class="panel-heading">
        <h3 class="panel-title">Contact US</h3>
    </div>*@
    <div class="panel-body" ng-show="!isSendingMessage">
        <div class="form-group">
            <label class="control-label" for="focusedInput">First Name</label>
            <input class="form-control" type="text" ng-model="contact.FirstName">
        </div>
        <div class="form-group">
            <label class="control-label" for="focusedInput">Last Name</label>
            <input class="form-control" type="text" ng-model="contact.LastName">
        </div>
        <div class="form-group">
            <label class="control-label" for="focusedInput">Email Address</label>
            <input class="form-control" type="text" ng-model="contact.Email">
        </div>
        <div class="form-group">
            <label class="control-label" for="focusedInput">Mailing Address</label>
            <input class="form-control" type="text" ng-model="contact.AddressOne"><br />
            <input class="form-control" type="text" ng-model="contact.AddressTwo">
        </div>
        <div class="form-group">
            <label class="control-label" for="focusedInput">Message</label>
            <textarea class="form-control" rows="3" id="textArea" ng-model="contact.Message"></textarea>
        </div>
        <div class="form-group" style="text-align: right;">
            <a href="#" class="btn btn-primary" ng-click="sendMessage()">Send Message</a>

        </div>
    </div>
    
    <p ng-show="isMessageSent">Thank you for contacting us. Some one will be in touch with your soon.</p>
</div>
