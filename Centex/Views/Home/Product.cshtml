@model Centex.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    .photo {
        width: 7.5vw;
        height: 12vh;
    }

    @@media(max-width: 480px) {
        .photo {
            width: 55vw;
            padding-left: 10vw;
        }
    }
</style>

<div class="row top">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12 col-md-2 col-lg-offset-1 col-lg-2 text-center">
                @if (Model.Product.Photos != null && Model.Product.Photos.Any())
                {
                    for (var i = 0; i < Model.Product.Photos.Count(); i++)
                    {
                        <a href="#" data-toggle="modal" data-target="#@Model.Product.ModalIds.ToArray()[i]"><img src="@Model.Product.Photos.ToList()[i].FilePath" alt="@Model.Product.Photos.ToList()[i].ImageDescription" class="photo" /></a><br /><br />
                    }
                }
            </div>
            <div class="col-xs-12 col-lg-5 col-md-6">
                <h2>@Model.Title</h2>
                @foreach (var item in @Model.Product.Descriptions.MainDescriptions)
                {
                    <p>@item</p>
                }

                @if (Model.ListDescriptions != null && Model.ListDescriptions.Any())
                {
                    <ul>
                        @foreach (var item in Model.ListDescriptions)
                {
                            <li style="font-size: 1.25em;">@item</li>
                        }
                    </ul>
                }
            </div>
            <div class="col-xs-12 col-lg-3 col-md-3">
                @Html.Partial("ContactPanel")
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @for (var i = 0; i < @Model.Product.Descriptions.SubDescriptions.Count(); i++)
        {
            <div class="modal fade" id="@Model.Product.ModalIds.ToArray()[i]">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h4 style="font-weight: bold;" class="modal-title">@Model.Product.Descriptions.SubDescriptions.ToList()[i].Title</h4>
                        </div>
                        <div class="modal-body">
<img src="@Model.Product.Photos.ToList()[i].FilePath" alt="@Model.Product.Photos.ToList()[i].ImageDescription" class="photo"  style="float: left; padding-right: 5px;"/>
                            @foreach (var item in @Model.Product.Descriptions.SubDescriptions.ToList()[i].Descriptions)
                            {
                                <p>@item</p>
                            }

                            <ul>
                                @if (@Model.Product.Descriptions.SubDescriptions.ToList()[i].ListDescriptions != null && @Model.Product.Descriptions.SubDescriptions.ToList()[i].ListDescriptions.Any())
                                {
                                    foreach (var item in @Model.Product.Descriptions.SubDescriptions.ToList()[i].ListDescriptions)
                                    {
                                        <li style="font-size: 1.25em;">@item</li>
                                    }
                                }

                            </ul>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>

