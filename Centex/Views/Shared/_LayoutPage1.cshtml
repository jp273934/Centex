    <script src="~/Scripts/Modules/app.js"></script>
    <script src="~/Scripts/Controllers/ContactCtrl.js"></script>
    
    <script>
        $(document).ready(function() {
            $.material.init();
        });

    </script>
    <title>Centex Material Handling</title>
    <style>
        .panel {
            box-shadow: none;
        }

        .form-group {
            margin-top: 2px;
        }

        p {
            font-size: 1.3em;
        }

        
        .navbar-nav  li {
            font-size: 1.25em;
            font-family: Copperplate, Copperplate Gothic Light, fantasy;
            color: yellow;
        }
        
        .title {
            color: #fff; 
            font-family: Copperplate, Copperplate Gothic Light, fantasy; 
            font-weight: bold; 
            font-size: 2em;
            padding-top: 6vh;
        }

        @@media(max-width: 480px) {
            .title {
                text-align: center;
                padding-top: 2vh;
            }
        }

@@media (min-width: 768px) {
  .navbar-nav.navbar-center {
    position: absolute;
    left: 50%;
    transform: translatex(-50%);
  }
}

@@media (max-width: 1500px) {
  .navbar-nav.navbar-center {
    position: absolute;
    left: 12.5%;
    transform: translatex(12.5%);
  }
}

@@media (max-width: 1200px) {
  .navbar-nav.navbar-center {
    position: absolute;
    left: 0%;
    transform: translatex(0%);
  }
}
.decals {
    background-color: #000;
    height: 12vh; top: 10vh; 
    z-index: 750;
}

.navigation {
    top: 17.5vh; 
    z-index: 1000; 
    height: 7.5vh; 
    background-color: #000;
}
@@media (max-width: 768px) {
    .navigation {
        top: 17.5vh;
    }

    .navbar-nav li {
        color: #000;
        background-color: #fff;
    }

     .top {
         padding-top: 20vh;
     }
}

.top {
        padding-top: 27.5vh;
    }
    </style>
</head>

<body style="background-color: #fff;">

<div class="row navbar-fixed-top" style="background-color: #000; height: 17.5vh;">
    <div class="col-xs-12 col-md-7 col-sm-7  col-lg-3 col-lg-offset-3 title">
        <span style="" >Centex Material Handling</span>
    </div>
    <div class="col-lg-1 visible-lg">
        <img src="/Images/Header/BuisinessLogo.png" style="height: 17.5vh;" />

    </div>
    <div class="col-sm-5 col-md-5 col-lg-2 col-xs-12 text-right hidden-xs" style="padding-top: 4vh;">
        
        <span style="color: #fff; font-size: 1.5em; font-family: Copperplate, Copperplate Gothic Light, fantasy;">AUSTIN, TEXAS</span><br/>
        <span style="color: #fff; font-size: 1.5em; font-family: Copperplate, Copperplate Gothic Light, fantasy;">PH: 512-337-8181</span><br/>
        <span style="color: #fff; font-size: 1.5em; font-family: Copperplate, Copperplate Gothic Light, fantasy;">FAX: 512-646-2661</span>
    </div>
</div>
<div class="row navbar-fixed-top decals visible-lg" >

    <div class="col-sm-9 col-sm-offset-2">
        <img src="~/Images/Header/Demag.png" style="width: 10vw; height: 10%; padding: 2.5vh 1vw;"/>
        <img src="~/Images/Header/Gorbel.png" style="width: 10vw; padding-top: 1vh; padding-right: 1vw;"/>
        <img src="~/Images/Header/Harrington.png" style="width: 10vw; height: 6vh; padding-top: 1vh;  padding-right: 1vw;"/>
